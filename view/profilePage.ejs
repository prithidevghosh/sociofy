<!-- views/profile.ejs -->

<!DOCTYPE html>
<html>

<head>
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        .profile-photo {
            width: 100%;
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="my-4">User Profile</h1>
        <div class="row">
            <div class="col-md-3">
                <img src="https://statinfer.com/wp-content/uploads/dummy-user.png" alt="User Profile Photo"
                    class="img-thumbnail profile-photo">
                <% if(locals.user && (locals.user.id==user_profile.id)) {%>
                    <button type="button" class="btn btn-primary mt-3" data-toggle="collapse"
                        data-target="#editProfileForm">
                        Edit Profile
                    </button>
                    <%}%>
            </div>
            <div class="col-md-9">
                <h2>
                    <%= user_profile.name %>
                </h2>
                <p>
                    <%= user_profile.email %>
                </p>
            </div>
        </div>
        <% if(locals.user && (locals.user.id==user_profile.id)) {%>
            <div class="row mt-3 collapse" id="editProfileForm">
                <div class="col-md-6">
                    <form action="/user/update/<%=user_profile.id%>" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
            <%}%>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>